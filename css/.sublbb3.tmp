@import url("base.css");



/*头部*/
#head{
	width: 100%;
	height: 60px;
	position: fixed;
	left: 0;
	top: 0;
	background: #168bd8;
	z-index: 5;
}
.headcen{
	width: 1000px;
	height: 60px;
	margin: 0 auto;
}
.headcen .baidu{
    background-image: url(../img/9.png);
    background-position: -2px 0px;
    display: block;
    width: 120px;
    height: 40px;
    margin-top: 10px;
    background-repeat: no-repeat;
    float: left;
}
.headcen .headleft{
	width: 360px;
	height: 60px;
	float: left;
	background: red;
}




.section:nth-of-type(1){
	background: url(../img/3.jpg);
}
.section:nth-of-type(2){
	background: url(../img/4.jpg);
}
.section:nth-of-type(3){
	background: url(../img/6.jpg);
}
.section:nth-of-type(4){
	background: url(../img/5.jpg);
}
.center{
	width: 1000px;
	height: 100%;
	margin: 0 auto;
	border:1px solid #333;
	position: relative;
}




/*第一屏*/
.section:nth-of-type(1) .zhong{
	position: absolute;
	left: 0;
	top: 122px;
	width: 501px;
	height: 158px;
}
.section:nth-of-type(1) .plane{
	position: absolute;
	left: 300px;
	top: 100px;
	width: 119px;
	height: 78px;
	transition: all 1s;
	animation:plane 1.2s linear infinite alternate;
}
@keyframes plane{
	from{
		transform: translateY(0px);
	}
	to{
		transform: translateY(15px);
	}
}
.bottom1{
	width:100%;
	height:150px;
	background:#0B67BE;
	position: absolute;
	bottom:0;
	left:0;
}
.bing1{
	position: absolute;
    left: -180px;
    bottom: 23px;
    z-index: 4;
}
.bing3{
	position: absolute;
    right: 300px;
    bottom: 85px;
    z-index: 4;
}
.bing2{
	position: absolute;
    right: -50px;
    bottom: 23px;
    z-index: 4;
}
.chuan{
	position: absolute;
    left: 150px;
    bottom: 110px;
    z-index: 5;
}
.down{
	position: absolute;
	left:50%;
	margin-left: 15px;
	bottom:50px;
	z-index: 10;
	animation: down .5s linear infinite alternate;
}
@keyframes down{
	from{
		bottom:50px;
		opacity: 1;
	}
	to{
		bottom:40px;
		opacity: .5;
	}
}



